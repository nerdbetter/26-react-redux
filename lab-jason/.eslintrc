{
  "rules": {
    "no-console": "off",
    "indent": [ "error", 2 ],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "linebreak-style": [ "error", "unix" ]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jasmine": true,
    "browser": true
  },
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
  "extends": "eslint:recommended"
}
